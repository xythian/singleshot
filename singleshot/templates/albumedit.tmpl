<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/1999/REC-html401-19991224/loose.dtd">
<HTML>
<HEAD>
<TITLE>$directory.title</TITLE>
#include "css.tmpl"
</head>
<body>

#include "header.tmpl"

<h2><a href="./">$directory.title</a></h2>

<div class=thumbnails>

<table>
<tr>
<form method=post action="$directory.href">
<input type=hidden name=action value="edit">
<td>Album title:</td>
<td><input type=text name="comment" value="$directory.title" cols=40 ></td>
<td><input type=submit name="savecomment" value="Save"></td>
</form>
</tr>
</table>

#for item in $directory.items
<table>
   <tr>
   <a name="$item.name" />
   <form method=post action="$item.href\#$item.name">
      <input type=hidden name=action value="edit">
      <td>
      #if $item.image.sizes.thumb
         <a href="$item.href"><img border=0 class=thumbnail src="$item.image.sizes.thumb.href" ></a>
      #else
         <a href="$item.href">$item.title</a>   
      #end if
      </td>
      #if not isinstance($item, type($directory))
      <td border=1 >
          Rotate Clockwise:<br>
          <input type="submit" name="rotate" value="90">
          <input type="submit" name="rotate" value="180">
          <input type="submit" name="rotate" value="270">
      </td>
      <td border=1 >
          <textarea name="comment">$item.title</textarea>
          <input type="submit" name="savecomment" value="Save">
      </td>
      <td>
          #if $item.name == $directory.highlightimagename
          (current highlight image)
          #else
          <input type="hidden" name="highlightimage" value="$item.name">
          <input type="submit" name="savehilight" value="Set as Highlight Image">
          #end if
      #else
      <td>
          <a href="$item.href?action=edit">$item.title</a>   
      </td>
      #end if
   </form>
   </tr>
</table>
#end for

<form method=post enctype="multipart/form-data" action="$directory.href">
